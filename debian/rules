#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_installsystemd:
	dh_installsystemd --name=apt-lan-rsync apt-lan-rsync.service

#https://bugs.debian.org/cgi-bin/bugreport.cgi?att=1;bug=713857;filename=0001-use-dh-systemd-for-proper-systemd-related-maintscrip.patch;msg=5
#override_dh_auto_install:
	# auto-install disabled

#override_dh_installinit:
	#dh_installinit --update-rcd-params='start . 2 3 4 5 . stop . 1 .'
